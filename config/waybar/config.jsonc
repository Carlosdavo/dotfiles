// Configuracion waybar
{
  "layer": "top", // Waybar at top layer
  "position": "top", // Waybar position (top|bottom|left|right)
// "width": 1280, // Waybar width
  "spacing": 0,
  "height": 24,
  "spacing": 0, // Gaps between modules (4px)
  "reload_style_on_change": true,
// Choose the order of the modules
  "group/cpuntemp": {
    "orientation": "horizontal",
    "on-click": "kitty",
    "modules": ["cpu", "temperature#cpu"],
  },
  "modules-right": [
    "custom/pacman",
    "group/pulseaudionslider",
    "group/backlightnslider",
    "bluetooth",
    "network#wireless",
    "network#ethernet",
    "battery",
    "custom/power"
  ],
  "modules-center": ["custom/dnd", "gpu"], // "niri/window"],
  "modules-left": [
    "clock",
    "hyprland/workspaces" ],
  "group/pulseaudionslider": {
    "orientation": "horizontal",
    "modules": ["pulseaudio", "pulseaudio/slider"],
  },
  "group/backlightnslider": {
    "orientation": "horizontal",
    "modules": ["backlight", "backlight/slider"],
  },
	"cpu": {
		"format": "",
		"tooltip": true,
		"format-icons": [
			"▁",
			"▂",
			"▃",
			"▄",
			"▅",
			"▆",
			"▇",
			"█"
		],
		"on-click-right": "hyprsysteminfo"
	},
  "clock": {
    "locale": "es_DO.UTF-8",
    "format": "<span font_desc='KiwiSoda 15' weight='900'>{:%H:%M}</span>",
    "interval": 1,
    "format-alt": "{:L%H:%M:%S  │   %F, %B, %A}",
    "tooltip-format": "<tt><small>{calendar}</small></tt>",
    "on-click-right": "waybar-scripts copy_date",
    "calendar": {
      "mode": "year",
      "mode-mon-col": 3,
      "weeks-pos": "right",
      "on-scroll": 1,
      "format": {
        "months": "<span color='#e5e1e9'><b>{}</b></span>",
        "days": "<span color='#e5e1e9'><b>{}</b></span>",
        "weeks": "<span color='#e5dff9'><b>W{}</b></span>",
        "weekdays": "<span color='#e5dff9'><b>{}</b></span>",
        "today": "<span bgcolor='#e5dff9' color='#000000'><b>{}</b></span>",
      },
    },

    "actions": {
      "on-click-middle": "mode",
      "on-click-forward": "tz_up",
      "on-click-backward": "tz_down",
      "on-scroll-up": "shift_up",
      "on-scroll-down": "shift_down",
    },
  },

  "battery": {
    "bat": "BAT0",
    "interval": 20,
    "states": {
      "warning": 30,
      "critical": 15,
    },
    "format": "{icon} <span foreground=\"#e5e1e9\">{capacity}%</span>",
    "format-charging": "󰂄  {capacity}%",
    "format-icons": ["󰂎", "󰁺", "󰁻", "󰁼", "󰁽", "󰁾", "󰁿", "󰂀", "󰂁", "󰂂", "󰁹"],
    "max-length": 25,
    "tooltip": true,
    "tooltip-format": "Time: {time} left\nCapacity: {health}%\n{power} watts",
  },
  "cpu": {
    "interval": 2,
    "format": " <span foreground=\"#e5e1e9\">{usage}%</span>",
    "max-length": 10,
    "tooltip": true,
    "on-click": "waybar-scripts htop_cpu",
  },
  "memory": {
    "interval": 2,
    "format": " <span foreground=\"#e5e1e9\">{}%</span>",
    "tooltip": true,
    "tooltip-format": "{used:0.1f}GiB used\n{avail:0.1f}GiB available",
    "max-length": 10,
    "on-click": "waybar-scripts htop_mem",
  },
  "temperature#cpu": {
    // for i in /sys/class/hwmon/hwmon*/temp*_input; do                                                3:11:15
    // echo "$(<$(dirname $i)/name): $(cat ${i%_*}_label 2>/dev/null || echo $(basename ${i%_*})) $i";
    // done
    "hwmon-path": "/sys/class/hwmon/hwmon4/temp1_input",
    "critical-threshold": 90,
    "interval": 2,
    "format-critical": " {temperatureC}°C",
    "format": " <span foreground=\"#e5e1e9\">{temperatureC}°C</span>",
    "on-click": "waybar-scripts htop_cpu",
  },
  "disk": {
    "interval": 60,
    "format": "󰋊 <span foreground=\"#e5e1e9\">{percentage_used}%</span>",
    "tooltip": true,
    "tooltip-format": "Free: {free} ({percentage_free}%)\nTotal: {total}",
    "path": "/",
  },
  "custom/updates": {
    "exec": "waybar-scripts check_updates",
    "on-click": "waybar-scripts open_update_screen",
    "restart-interval": 900,
    "tooltip": false,
  },
  "custom/sync": {
    "exec": "waybar-scripts sync_icon",
    "on-click": "waybar-scripts sync_icon_click",
    "tooltip": false,
    "restart-interval": 5,
  },
  "custom/hiddenwindow": {
    "exec": "waybar-scripts check_special_workspace",
    "tooltip": true,
    "signal": 3,
  },
  "custom/dnd": {
    "exec": "waybar-scripts do_not_disturb",
    "on-click": "dunstctl set-paused false && pkill -RTMIN+4 waybar",
    "signal": 4,
  },
  "custom/mic": {
    "exec": "waybar-scripts mic_icon",
    "on-click": "notify-media togglemic",
    "tooltip": false,
    "signal": 5,
  },
  "custom/gpu_usage": {
    "exec": "waybar-scripts gpu_usage",
    "on-click": "waybar-scripts gpu_click",
    "restart-interval": 4,
    "tooltip": false,
  },
  "hyprland/workspaces": {
    "format": "{icon}",
    "move-to-montior": true,
    "format-icons": {
       "1": "•",
       "2": "२",
       "3": "३",
       "4": "५",
       "5": "४",
       "6": "७",
       "7": "८",
       "8": "६",
       "9": "९",
       "10": "०"
      //   "10": "१०"
     },
  },
  "niri/workspaces": {
    "format": "{icon}",
    "move-to-montior": true,
  },
  "network#wireless": {
    "on-click": "waybar-scripts wifi_click",
    "interface": "wlan0",
    "interval": 2,
    "format": "{ifname}",
    "format-wifi": "{signalStrength} 󰤨 <span foreground=\"#e5dff9\"></span> <span foreground=\"#e5e1e9\">{bandwidthDownBytes}</span>  <span foreground=\"#e5dff9\"></span> <span foreground=\"#e5e1e9\">{bandwidthUpBytes}</span>",
    "format-disconnected": " Disconnected", //An empty format will hide the module.
    "tooltip-format": "{ifname} via {gwaddr} 󰊗",
    "tooltip-format-wifi": "SSID: {essid}\nIP: {ipaddr}",
    "tooltip-format-disconnected": "Disconnected",
    "max-length": 50,
  },
  "network#ethernet": {
    "on-click": "waybar-scripts wifi_click",
    "interface": "enp1s0",
    "interval": 2,
    "format": "{ifname}",
    "format-ethernet": "󰈁 <span foreground=\"#e5dff9\"></span> <span foreground=\"#e5e1e9\">{bandwidthDownBytes}</span>  <span foreground=\"#e5dff9\"></span> <span foreground=\"#e5e1e9\">{bandwidthUpBytes}</span>",
    "format-disconnected": "", //An empty format will hide the module.
    "tooltip-format": "{ifname} via {gwaddr} 󰊗",
    "tooltip-format-wifi": "SSID: {essid}\nIP: {ipaddr}",
    "tooltip-format-ethernet": "IP Address: {ipaddr}/{gwaddr}\nInterface: {ifname}",
    "tooltip-format-disconnected": "",
    "max-length": 50,
  },
  "bluetooth": {
    // "controller": "controller1", // specify the alias of the controller if there are more than 1 on the system
    "format": "󰂯 <span foreground=\"#e5e1e9\">{status}</span>",
    "format-on": "󰂯 No connection",
    "format-disabled": "󰂯 Disabled",
    "format-off": "󰂯 Disabled",
    "on-click": "blueman-manager",
    "on-click-right": "waybar-scripts bt_toggle",
    "max-length": 15,
    "format-connected": "{device_battery_percentage} 󰂱 <span foreground=\"#e5e1e9\">{device_alias}</span>",
    "tooltip-format": "{controller_alias}\t{controller_address}",
    "tooltip-format-connected": "{controller_alias}:  {controller_address}\n{device_enumerate}",
    "tooltip-format-enumerate-connected": "{device_alias}:  {device_address}",
  },
  "backlight": {
    "format": "{percent} {icon}",
    "format-icons": ["󰃞", "󰃟", "󰃝", "󰃠"],
    "on-click": "nwg-displays",
    "tooltip": false,
    "device": "amdgpu_bl1",
  },
  "backlight/slider": {
    "min": 0,
    "max": 100,
    "orientation": "horizontal",
    "device": "amdgpu_bl1",
  },
  "pulseaudio": {
    "format": "{volume} {icon}",
    "format-bluetooth": "{volume} {icon}<span size='small'></span>",
    "tooltip": true,
    "tooltip-format": "{desc}",
    "format-muted": "",
    "format-icons": {
      "alsa_output.pci-0000_00_1f.3.analog-stereo": "",
      "alsa_output.pci-0000_00_1f.3.analog-stereo-muted": "",
      "headphone": "󰋋",
      "hands-free": "󰋎",
      "headset": "󰋎",
      "phone": "",
      "phone-muted": "",
      "portable": "",
      "car": "",
      "default": ["󰕿", "󰖀", "󰕾"],
    },
    "scroll-step": 1,
    "on-click-right": "pavucontrol",
    "on-click": "waybar-scripts switch_audio_sink",
    "ignored-sinks": ["Easy Effects Sink"],
  },
  "pulseaudio/slider": {
    "min": 0,
    "max": 120,
    "orientation": "horizontal",
  },
  "privacy": {
    "icon-spacing": 4,
    "icon-size": 12,
    "transition-duration": 250,
    "modules": [
      {
        "type": "screenshare",
        "tooltip": true,
        "tooltip-icon-size": 24,
      },
      {
        "type": "audio-in",
        "tooltip": true,
        "tooltip-icon-size": 24,
      },
    ],
  },
  "tray": {
    "icon-size": 15,
    "spacing": 10,
  },
  "hyprland/window": {
    "format": "{}",
    "separate-outputs": true,
    "max-length": 20,
  },

  "custom/power": {
    "format": " ",
    "tooltip": false,
    "on-click": "wlogout",
    "return-type": "none"
  },

  "wlr/taskbar": {
    "format": "{icon}",
    "icon-size": 18,
    "tooltip-format": "{title}",
    "on-click": "activate",
    "on-click-middle": "close"
  },

  "custom/colorpicker": {
    "format": "{}",
    "return-type": "json",
    "interval": "once",
    "exec": "~/.config/waybar/scripts/colorpicker.sh -j",
    "on-click": "~/.config/waybar/scripts/colorpicker.sh",
    "signal": 1
  },

  "custom/pacman": {
    "format": "󰅢 {}",
    "interval": 3600,   
    "exec": "checkupdates | wc -l",
    "exec-if": "exit 0",
    "on-click": "kitty sh -c 'yay -Syu; echo Done - Press enter to exit; read'; pkill -SIGRTMIN+8 waybar",
    "signal": 8,
    "tooltip-format": "Pending Updates"
  },

  "power-profiles-daemon": {
    "format": "{icon}",
    "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
    "tooltip": true,
    "format-icons": {
      "default": "",
      "performance": "",
      "balanced": "",
      "power-saver": ""
    }
  },
  "niri/window": {
    "format": "{}",
    "separate-outputs": true,
    "max-length": 20,
  },
}
